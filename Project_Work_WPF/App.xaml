<Application x:Class="Project_Work_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project_Work_WPF.ViewModels" 
    xmlns:local_2="clr-namespace:Project_Work_WPF.Views" >

    <Application.Resources>
        
        <DataTemplate DataType="{x:Type local:Login_Page_ViewModel}">
            <local_2:Login_Page_UserControl/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type local:User_Page_ViewModel}">
            <local_2:User_Page_UserControl/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:Register_Page_ViewModel}">
            <local_2:Register_Page_UserControl/>
        </DataTemplate>
         
        
    </Application.Resources>

</Application>
